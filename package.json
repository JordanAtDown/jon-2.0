{
  "name": "jon-2.0",
  "version": "0.0.2",
  "bin": {
    "jon2.0": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JordanAtDown/jon-2.0.git"
  },
  "scripts": {
    "start": "tsx src/presentation/commands/App.ts",
    "build": "tsc && npm run copy-resources && npm run copy-conf-npm",
    "copy-resources": "cp -r resources dist/",
    "copy-conf-npm": "cp package.json dist/ && cp README.md dist/",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist coverage",
    "dev": "ts-node-dev --respawn src/index.ts",
    "lint": "eslint . --config eslint.config.mjs --ignore-pattern 'dist/*'",
    "lint:fix": "eslint . --config eslint.config.mjs --ignore-pattern 'dist/*' --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "commit": "npx git-cz",
    "semantic-release": "semantic-release",
    "prepare": "npm run build"
  },
  "type": "module",
  "keywords": [
    "exiftool",
    "exif",
    "photo",
    "sort",
    "catalog"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JordanAtDown/jon-2.0/issues"
  },
  "homepage": "https://github.com/JordanAtDown/jon-2.0#readme",
  "description": "",
  "dependencies": {
    "blessed": "^0.1.81",
    "commander": "^13.1.0",
    "exiftool-vendored": "^29.0.0",
    "fast-glob": "^3.3.3",
    "fp-ts": "^2.16.9",
    "ink": "^5.1.0",
    "lokijs": "^1.5.12",
    "luxon": "^3.5.0",
    "react": "^18.3.1",
    "tsx": "^4.19.2",
    "uuid": "^11.0.5",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@sindresorhus/tsconfig": "^3.0.1",
    "@types/blessed": "^0.1.25",
    "@types/lokijs": "^1.5.14",
    "@types/react": "^19.0.8",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/coverage-v8": "^2.1.8",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.3",
    "vite": "^5.4.14",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "commitlint": {
    "extends": [
      "./commitlint.config.cjs"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
